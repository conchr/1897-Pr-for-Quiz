                    <button id="prev-btn" class="presentation-button opacity-50 cursor-not-allowed" onclick="changePage(-1)" disabled>
                        &larr; Προηγούμενη
                    </button>
                    <div class="page-indicator text-center" id="footer-page-indicator">Σελίδα 1 / 11</div>
                    <button id="next-btn" class="presentation-button" onclick="changePage(1)">
                        Επόμενη &rarr;
                    </button>
                </div>
                <div class="flex justify-center">
                    <a href="https://conchr.github.io/Games/" class="presentation-button text-center">
                        Αρχική Σελίδα
                    </a>
                </div>
            </footer>
        </div>
    </div>

    <script>
        // Προσθήκη error handling για external resources
        window.addEventListener('error', function(e) {
            console.log('Error loading resource:', e.target.src || e.target.href);
        });

        // Page Navigation
        const introPage = document.getElementById('intro-page');
        const presentationPage = document.getElementById('presentation-page');
        const startPresentationBtn = document.getElementById('start-presentation');

        // Presentation Slides Data - ΧΡΗΣΗ PLACEHOLDER ΕΙΚΟΝΩΝ
        const slides = [
            {
                title: "Εισαγωγή: Η Μάχη των Φαρσάλων",
                content: `
                    <div class="mb-6">
                        <h2 class="font-bold mb-4 accent-text">23 Απριλίου 1897</h2>
                        <p class="mb-4">Η Μάχη των Φαρσάλων ήταν μια αποφασιστική σύγκρουση του <span class="accent-text font-bold">Ελληνοτουρκικού Πολέμου του 1897</span>, γνωστού και ως «Μαύρο '97» ή «Ατυχής Πόλεμος».</p>
                        <p class="mb-4">Ο πόλεμος ξεκίνησε λόγω του Κρητικού Ζητήματος, με την ελληνική πλειοψηφία στην Κρήτη να επιθυμεί την Ένωση με την Ελλάδα.</p>
                        <div class="highlight-box">
                            <p class="font-semibold">Παρά τη στρατιωτική ήττα, η μάχη αποτέλεσε σημαντικό μάθημα που οδήγησε σε μεταρρυθμίσεις και προετοίμασε την Ελλάδα για τους επιτυχημένους Βαλκανικούς Πολέμους.</p>
                        </div>
                    </div>
                    <div class="image-container" data-caption="Η Μάχη των Φαρσάλων - Ιστορική Αναπαράσταση">
                        <div class="placeholder-image">
                            Ιστορική Αναπαράσταση της Μάχης των Φαρσάλων<br>
                            [Θα προστεθεί σύντομα]
                        </div>
                    </div>
                `
            },
            {
                title: "Ιστορικό Πλαίσιο",
                content: `
                    <h2 class="font-bold mb-4 accent-text">Ο Ελληνοτουρκικός Πόλεμος του 1897</h2>
                    <p class="mb-4">Ο πόλεμος ξεκίνησε με ενθουσιασμό αλλά κατέληξε σε ταπεινωτική ήττα για την Ελλάδα, αποκαλύπτοντας τις τεράστιες στρατιωτικές και οργανωτικές αδυναμίες της χώρας.</p>
                    
                    <div class="timeline">
                        <div class="timeline-item">
                            <h3 class="font-semibold">Κρητικό Ζήτημα</h3>
                            <p>Η ελληνική πλειοψηφία στην Κρήτη επιθυμούσε την Ένωση με την Ελλάδα, γεγονός που οδήγησε σε επαναστάσεις και διεθνείς εντάσεις.</p>
                        </div>
                        <div class="timeline-item">
                            <h3 class="font-semibold">Έναρξη Πολέμου</h3>
                            <p>Μετά από ανεπιτυχείς μάχες στα ελληνοτουρκικά σύνορα και άτακτη υποχώρηση από τη Λάρισα, ο ελληνικός στρατός ανασυντάχθηκε στα Φάρσαλα.</p>
                        </div>
                        <div class="timeline-item">
                            <h3 class="font-semibold">Η Μάχη των Φαρσάλων</h3>
                            <p>Στις 23 Απριλίου 1897, ο ελληνικός στρατός προσπάθησε να οργανώσει αμυντική γραμμή στα Φάρσαλα.</p>
                        </div>
                    </div>
                `
            },
            // ... προσθήκη των υπολοίπων slides εδώ
            {
                title: "Τέλος Παρουσίασης",
                content: `
                    <div class="text-center py-8 md:py-12">
                        <h2 class="font-bold mb-4 md:mb-6">Σε ευχαριστούμε που παρακολούθησες την παρουσίαση</h2>
                        <p class="text-lg md:text-xl mb-6 md:mb-10">Δήμος Φαρσάλων 2025 - Παρουσίαση για την Μάχη των Φαρσάλων (1897)</p>
                        
                        <div class="flex flex-col md:flex-row justify-center gap-4 md:gap-6 mt-8 md:mt-12">
                            <a href="https://conchr.github.io/1897-Quiz/" class="presentation-button text-base md:text-lg py-2 md:py-3 px-4 md:px-6">
                                Κάνε το κουίζ γνώσεων
                            </a>
                            <button class="presentation-button text-base md:text-lg py-2 md:py-3 px-4 md:px-6" onclick="goToSlide(0)">
                                Ξαναδές την Παρουσίαση
                            </button>
                        </div>
                    </div>
                `
            }
        ];

        let currentPage = 0;

        const mainTitle = document.getElementById('main-title');
        const slideContent = document.getElementById('slide-content');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const pageIndicator = document.getElementById('page-indicator');
        const footerPageIndicator = document.getElementById('footer-page-indicator');
        const progressFill = document.getElementById('progress-fill');
        const imageModal = document.getElementById('image-modal');
        const modalCaption = document.getElementById('modal-caption');
        const closeModal = document.querySelector('.close-modal');
        
        function renderPage() {
            slideContent.style.opacity = '0';

            setTimeout(() => {
                const slide = slides[currentPage];
                mainTitle.textContent = `Η Μάχη των Φαρσάλων (1897): ${slide.title}`;
                slideContent.innerHTML = slide.content;
                slideContent.style.opacity = '1';

                pageIndicator.textContent = `Σελίδα ${currentPage + 1} / ${slides.length}`;
                footerPageIndicator.textContent = `Σελίδα ${currentPage + 1} / ${slides.length}`;

                const progressPercentage = ((currentPage + 1) / slides.length) * 100;
                progressFill.style.width = `${progressPercentage}%`;

                prevBtn.disabled = currentPage === 0;
                prevBtn.classList.toggle('opacity-50', currentPage === 0);
                prevBtn.classList.toggle('cursor-not-allowed', currentPage === 0);
                
                nextBtn.disabled = currentPage === slides.length - 1;
                nextBtn.classList.toggle('opacity-50', currentPage === slides.length - 1);
                nextBtn.classList.toggle('cursor-not-allowed', currentPage === slides.length - 1);
                nextBtn.textContent = (currentPage === slides.length - 1) ? 'Τέλος' : 'Επόμενη →';

                document.querySelectorAll('.image-container').forEach(thumbnail => {
                    thumbnail.addEventListener('click', openImageModal);
                });

                setTimeout(() => {
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }, 50);

            }, 250);
        }

        function changePage(direction) {
            const newPage = currentPage + direction;
            if (newPage >= 0 && newPage < slides.length) {
                currentPage = newPage;
                renderPage();
            }
        }

        function goToSlide(slideIndex) {
            if (slideIndex >= 0 && slideIndex < slides.length) {
                currentPage = slideIndex;
                renderPage();
            }
        }

        function openImageModal(e) {
            const container = e.currentTarget;
            const caption = container.getAttribute('data-caption') || 'Εικόνα';
            modalCaption.textContent = caption;
            imageModal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeImageModal() {
            imageModal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Ενεργοποίηση παρουσίασης
        startPresentationBtn.addEventListener('click', function() {
            introPage.style.display = 'none';
            presentationPage.style.display = 'block';
            renderPage();
        });

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') changePage(-1);
            else if (e.key === 'ArrowRight') changePage(1);
            else if (e.key === 'Escape') closeImageModal();
        });

        closeModal.addEventListener('click', closeImageModal);
        imageModal.addEventListener('click', (e) => {
            if (e.target === imageModal) closeImageModal();
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Page loaded successfully');
        });
    </script>
</body>
</html>
