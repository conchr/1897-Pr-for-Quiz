        let currentPage = 0;

        const mainTitle = document.getElementById('main-title');
        const slideContent = document.getElementById('slide-content');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const pageIndicator = document.getElementById('page-indicator');
        const footerPageIndicator = document.getElementById('footer-page-indicator');
        const progressFill = document.getElementById('progress-fill');
        const imageModal = document.getElementById('image-modal');
        const modalCaption = document.getElementById('modal-caption');
        const closeModal = document.querySelector('.close-modal');
        
        /**
         * Renders the content of the current slide.
         */
        function renderPage() {
            // Apply fade-out effect for transition
            slideContent.style.opacity = '0';

            setTimeout(() => {
                const slide = slides[currentPage];

                // Update the main title to include the slide title for clarity
                mainTitle.textContent = `Η Μάχη των Φαρσάλων (1897): ${slide.title}`;

                // Update content and apply fade-in effect
                slideContent.innerHTML = slide.content;
                slideContent.style.opacity = '1';

                // Update page indicators
                pageIndicator.textContent = `Σελίδα ${currentPage + 1} / ${slides.length}`;
                footerPageIndicator.textContent = `Σελίδα ${currentPage + 1} / ${slides.length}`;

                // Update progress bar
                const progressPercentage = ((currentPage + 1) / slides.length) * 100;
                progressFill.style.width = `${progressPercentage}%`;

                // Update button states
                prevBtn.disabled = currentPage === 0;
                prevBtn.classList.toggle('opacity-50', currentPage === 0);
                prevBtn.classList.toggle('cursor-not-allowed', currentPage === 0);
                
                nextBtn.disabled = currentPage === slides.length - 1;
                nextBtn.classList.toggle('opacity-50', currentPage === slides.length - 1);
                nextBtn.classList.toggle('cursor-not-allowed', currentPage === slides.length - 1);
                nextBtn.textContent = (currentPage === slides.length - 1) ? 'Τέλος' : 'Επόμενη →';

                // Add click event listeners to all thumbnails
                document.querySelectorAll('.image-container').forEach(thumbnail => {
                    thumbnail.addEventListener('click', openImageModal);
                });

                // Scroll to top of the page after content is rendered
                setTimeout(() => {
                    window.scrollTo({
                        top: 0,
                        left: 0,
                        behavior: 'smooth'
                    });
                }, 50);

            }, 250);
        }

        /**
         * Changes the current page/slide.
         * @param {number} direction - 1 for next, -1 for previous.
         */
        function changePage(direction) {
            const newPage = currentPage + direction;
            if (newPage >= 0 && newPage < slides.length) {
                currentPage = newPage;
                renderPage();
            }
        }

        /**
         * Goes to a specific slide.
         * @param {number} slideIndex - The index of the slide to go to.
         */
        function goToSlide(slideIndex) {
            if (slideIndex >= 0 && slideIndex < slides.length) {
                currentPage = slideIndex;
                renderPage();
            }
        }

        /**
         * Opens the image modal with the clicked image
         * @param {Event} e - The click event
         */
        function openImageModal(e) {
            const container = e.currentTarget;
            const caption = container.getAttribute('data-caption') || 'Εικόνα';
            
            modalCaption.textContent = caption;
            imageModal.classList.add('active');
            
            // Prevent scrolling of background content
            document.body.style.overflow = 'hidden';
        }

        /**
         * Closes the image modal
         */
        function closeImageModal() {
            imageModal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Show presentation when "Start Presentation" is clicked
        startPresentationBtn.addEventListener('click', function() {
            introPage.style.display = 'none';
            presentationPage.style.display = 'block';
            renderPage(); // Initialize the first slide
        });

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') {
                changePage(-1);
            } else if (e.key === 'ArrowRight') {
                changePage(1);
            } else if (e.key === 'Escape') {
                closeImageModal();
            }
        });

        // Close modal when clicking the X or outside the image
        closeModal.addEventListener('click', closeImageModal);
        imageModal.addEventListener('click', (e) => {
            if (e.target === imageModal) {
                closeImageModal();
            }
        });

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Page loaded successfully');
            
            const buttons = document.querySelectorAll('.main-button, .secondary-button');
            
            buttons.forEach(button => {
                button.addEventListener('mousedown', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                button.addEventListener('mouseup', function() {
                    if (this.classList.contains('main-button')) {
                        this.style.transform = 'translateY(-5px)';
                    } else {
                        this.style.transform = 'translateY(-3px)';
                    }
                });
                
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
</body>
</html>
